<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageButton_ImageViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh muốn hiển thị"
            android:textSize="28sp"
            android:textColor="@color/colorAccent"/>

        <RadioGroup
            android:id="@+id/radGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radDefaultImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ảnh mặc định có trong Android Studio"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/radWesterosImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Ảnh Westeros"/>
        </RadioGroup>

        <ImageButton
            android:id="@+id/btnExit"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_exit" />
        <!--            android:src="@drawable/ic_exit"/>-->
        <!-- Nên sử dụng thuộc tính app:srcCompat -->


        <ImageView
            android:id="@+id/imgContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher_background"/>
<!--            app:srcCompat="@drawable/ic_launcher_background" />-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>